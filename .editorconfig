# Editor configuration, see http://editorconfig.org
root = true


[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Indent 4 spaces for PHP
[*.{php}]
indent_size = 4

[*.{blade.php}]
indent_size = 2

[*.md]
max_line_length = 0
trim_trailing_whitespace = false
